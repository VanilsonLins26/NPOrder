@page
@model IdentityServerAspNetIdentity.Pages.Login.Index

<div class="padaria-card">
    <div class="text-center">
        <img src="~/logo-padaria.png" alt="Logo Padaria" class="logo-img" />
        <h2 class="mb-2" style="font-size: 2.5rem;">A Nossa Padaria</h2>
        <p class="text-muted mb-4">Bem-vindo! Acesse sua conta.</p>
    </div>

    <partial name="_ValidationSummary" />

    @if (Model.View.EnableLocalLogin)
    {
        <form asp-page="/Account/Login/Index">
            <input type="hidden" asp-for="Input.ReturnUrl" />

            <div class="form-group mb-3">
                <label asp-for="Input.Username" class="mb-1 text-muted">Usuário</label>
                <input class="form-control" placeholder="Digite seu usuário" asp-for="Input.Username" autofocus>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Input.Password" class="mb-1 text-muted">Senha</label>
                <input type="password" class="form-control" placeholder="Digite sua senha" asp-for="Input.Password" autocomplete="off">
            </div>

            @if (Model.View.AllowRememberLogin)
            {
                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="Input.RememberLogin">
                    <label class="form-check-label text-muted" asp-for="Input.RememberLogin">
                        Lembrar de mim
                    </label>
                </div>
            }

            <button class="btn btn-padaria" name="Input.Button" value="login">ENTRAR</button>

            <div class="text-center mt-3">
                <button class="btn btn-link text-muted" style="text-decoration: none; font-size: 0.9rem;" name="Input.Button" value="cancel">Cancelar</button>
            </div>

            <div class="text-center mt-4 pt-3 border-top">
                <small class="text-muted">Ainda não tem conta?</small><br>
                <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.Input.ReturnUrl">Criar uma nova conta</a>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-warning">
            Login local desativado.
        </div>
    }
</div>